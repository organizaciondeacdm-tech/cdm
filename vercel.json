{
  "version": 2,
  "buildCommand": "npm install && npm run build:frontend",
  "outputDirectory": "dist",
  "env": {
    "NODE_ENV": "production"
  },
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.js"
    },
    {
      "src": "^/(.*)$",
      "dest": "/index.html"
    }
  ]
}
