# Server
PORT=5000
NODE_ENV=production

# Frontend API URL (for Vercel deployment)
REACT_APP_API_URL=https://tu-proyecto.vercel.app/api

# Database
MONGODB_URI=mongodb://localhost:27017/acdm_db
MONGODB_URI_PROD=mongodb+srv://usuario:password@cluster.mongodb.net/acdm_db

# JWT
JWT_SECRET=tu_secreto_super_seguro_cambiame_en_produccion
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=otro_secreto_para_refresh_tokens
JWT_REFRESH_EXPIRE=30d

# Encryption (para datos sensibles)
ENCRYPTION_KEY=clave_para_encriptar_datos_sensibles

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_contraseña_app

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Backup
BACKUP_PATH=./backups
BACKUP_SCHEDULE=0 2 * * * # 2 AM todos los días

# Security
CORS_ORIGIN=http://localhost:3000,https://tudominio.com
BCRYPT_ROUNDS=12

# API Keys
GOOGLE_MAPS_API_KEY=tu_api_key